{ 
  "title": "3D Circle Packing", 
  "description": "3D Circle packing chart",

  "width": 640,
  "depth": 640,
  "height": 90,

  "camera": {
    "position": [0, 0, 0],
    "distance": 1.8,
    "altitude": 60,
    "worldTarget": [320, 0, 350]
  },

  "scales": [
    {
      "name": "height",
      "type": "band",
      "padding": 0.01,
      "domain": {"data": "table", "field": "depth"},
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "depth"},
      "range": {"scheme": "category20"}
    }
  ],

  "marks": [
    {
      "type": "rect",
      "geometry": "xzrect",
      "encode": {
        "enter": {
          "xc": {"signal": "width/2"},
          "zc": {"signal": "depth/2"},
          "width": {"signal": "width*2"},
          "depth": {"signal": "depth*2"},
          "fill": {"value": "white"}
        }
      }
    },
    {
      "type": "rect",
      "geometry": "cylindersdf",
      "material": "metal",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "xc": {"field": "x"},
          "zc": {"field": "y"},
          "y": {"scale": "height", "field": "depth"},
          "width": {"field": "r", "mult": 2},
          "rounding": {"value": 1},
          "height": {"scale": "height", "band": 1},
          "fuzz": {"value": 1},
          "fill": {"scale": "color", "field": "depth"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "leafs"},
      "encode": {
        "enter": {
          "x": {"field": "x"},
          "z": {"field": "y", "offset": {"field": "fontSize", "mult": 0.1}},
          "y": {"scale": "height", "field": "depth", "band": 1, "offset": 0.01},
          "text": {"field": "value"},
          "fill": {"value": "white"},
          "stroke": {"value": "black"},
          "strokeWidth": {"value": 0.5},
          "angleX": {"value": 90},
          "fontSize": {"field": "fontSize", "mult": 1.5}
        }
      }
    }
  ],

