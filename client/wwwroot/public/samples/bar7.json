      "labelAngleX": 90,
      "title": "Subcategory",
      "titleOffsetX": 48,
      "titleOffsetY": 0.1,
      "titleAngleX": 90,
      "titleAngleZ": -90,
      "domain": false
    }
  ],

  "marks": [
    {
      "type": "rect",
      "geometry": "xzrect",
      "material": "glossy",
      "encode": {
        "enter": {
          "xc": {"signal": "width/2"},
          "zc": {"signal": "depth/2"},
          "width": {"signal": "width*2"},
          "depth": {"signal": "width*2"},
          "fuzz": {"value": 0.1},
          "fill": {"value": "white"}
        }
      }
    },
    {
      "from": {"data": "table"},
      "type": "rect",
      "geometry": "cylindersdf",
      "material": "glossy",
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "category"},
          "width": {"scale": "xscale", "band": 1},
          "y": {"scale": "yscale", "value": 0},
          "y2": {"scale": "yscale", "field": "amount"},
          "z": {"scale": "zscale", "field": "subcategory"},
          "depth": {"scale": "zscale", "band": 1},
          "rounding": {"scale": "xscale", "band": 0.025},
          "fill": {"scale": "color", "field": "subcategory"}
        }
      }
    },
    {
      "from": {"data": "table"},
      "type": "text",
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "category", "band": 0.5},
          "y": {"scale": "yscale", "field": "amount", "offset": 0.1},
          "z": {"scale": "zscale", "field": "subcategory", "band": 0.5},
          "align": {"value": "center"},
          "baseline": {"value": "center"},
          "angleX": {"value": 90},
          "fontSize": {"value": 16},
          "fill": {"value": "white"},
          "stroke": {"value": "black"},
          "strokeWidth": {"value": 0.5},
          "text": {"field": "amount"}
        }
      }
    }
  ]
