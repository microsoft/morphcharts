  "scales": [
    {
      "name": "xscale",
      "type": "band",
      "domain": {"data": "table", "field": "category"},
      "range": "width",
      "padding": 0.25
    },
    {
      "name": "yscale",
      "type": "linear",
      "domain": {"data": "table", "field": "amount"},
      "nice": true,
      "range": "height"
    },
    {
      "name": "zscale",
      "type": "band",
      "domain": {"data": "table", "field": "subcategory"},
      "range": "depth",
      "reverse": true,
      "padding": 0.25
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "table", "field": "subcategory"}
    }
  ],

  "axes": [
    {
      "orient": "bottom",
      "orientZ": "front",
      "scale": "xscale",
      "labelBaseline": "top",
      "labelOffsetY": 0.1,
      "labelAngleX": 90,
      "title": "Category",
      "titleOffsetZ": 32,
      "titleOffsetY": 0.1,
      "titleAngleX": 90,
      "gridZ": true,
      "gridWidth": 0.5,
      "domain": false
    },
    {
      "orient": "left",
      "orientZ": "bottom",
      "scale": "zscale",
      "labelAlign": "right",
      "labelOffsetY": 0.1,
      "labelAngleX": 90,
      "title": "Subcategory",
      "titleOffsetX": -48,
      "titleOffsetY": 0.1,
